<form class="{{cssClass}}" autocomplete="off">
  <div class="header personal">
    <a id="configure-actor">{{localize "Configure"}}</a>
  </div> 
  <header class="sheet-header" ondragstart="return false;" ondrop="return false;">
    <h1 class="charname item">
      <input class="input name" style="box-shadow: none !important;" name="name" type="text" value="{{actor.name}}" placeholder="{{localize 'Character Name'}}" />
      <span class="label name">{{localize "Name"}}</span>
    </h1>

    <div class="item">
      <input class="input species" style="box-shadow: none !important;" type="text" value="{{actor.Species}}"
        placeholder="{{localize 'Species'}}" />
      <span class="label species">{{localize "Species"}}</span>
    </div>

    <div id="field-gender" class="item">
      <input class="input gender" style="box-shadow: none !important;" name="system.details.gender.value" type="text" value="{{system.details.gender.value}}"
        placeholder="{{localize 'Gender'}}" />
      <span class="label gender">{{localize "Gender"}}</span>
    </div>
  </header>

  <section class="general" ondragstart="return false;" ondrop="return false;">
    <img class="charimg profile" src="{{actor.img}}" title="{{actor.name}}" height="95" width="95" data-edit="img">

    <div class="items">
      <div class="row">
        <div id="field-class" class="item">
          <input class="input-details" style="box-shadow: none !important;" type="text" value="{{career.currentClass}}"
            placeholder="{{localize 'Class'}}" readonly title = "{{localize 'SHEET.CareerToolTip'}}"/>
          <span class="label-details">{{localize "Class"}}</span>
        </div>

        <div id="field-career" class="item">
          <input class="input-details" style="box-shadow: none !important;" type="text" value="{{career.currentCareerGroup}}"
            placeholder="{{localize 'Career'}}" readonly title = "{{localize 'SHEET.CareerToolTip'}}"/>
          <span class="label-details">{{localize "Career Group"}}</span>
        </div>

        <div id="field-careerlevel" class="item">
          <input class="input-details"  style="box-shadow: none !important;" type="text" value="{{career.currentCareer}}"
            placeholder="{{localize 'Career Level'}}" readonly title = "{{localize 'SHEET.CareerToolTip'}}" />
          <span class="label-details">{{localize "Career"}}</span>
        </div>
      </div>

      <div class="row">
        <div id="field-status" class="item">
          <input id="input-status" class="input-details {{system.details.status.modified}}" style="box-shadow: none !important; cursor: pointer;" type="text" value="{{system.details.status.value}}"
            placeholder="{{localize 'Status'}}" readonly title = "{{localize 'SHEET.CareerToolTip'}}" />
          <span id="label-status" class="label-details">{{localize "Status"}}</span>
        </div>

        <div id="field-age" class="item">
          <input class="input-details" style="box-shadow: none !important;" name="system.details.age.value" type="text" value="{{system.details.age.value}}"
            placeholder="{{localize 'Age'}}" />
          <span class="label-details">{{localize "Age"}}<span>
        </div>

        <div id="field-height" class="item">
          <input class="input-details" style="box-shadow: none !important;" name="system.details.height.value" type="text"
            value="{{system.details.height.value}}" placeholder="{{localize 'CharacterHeight'}}" />
          <span class="label-details">{{localize "CharacterHeight"}}</span>
        </div>

        <div id="field-weight" class="item">
          <input class="input-details" style="box-shadow: none !important;" name="system.details.weight.value" type="text"
            value="{{system.details.weight.value}}" placeholder="{{localize 'Weight'}}" />
          <span class="label-details">{{localize "Weight"}}</span>
        </div>

        <div id="field-haircolour" class="item">
          <input class="input-details" style="box-shadow: none !important;" name="system.details.haircolour.value" type="text"
            value="{{system.details.haircolour.value}}" placeholder="{{localize 'Hair Colour'}}" />
          <span class="label-details">{{localize "Hair Colour"}}</span>
        </div>
      </div>

      <div class="row">
        <div id="field-eyecolour" class="item">
          <input class="input-details" style="box-shadow: none !important;" name="system.details.eyecolour.value" type="text"
            value="{{system.details.eyecolour.value}}" placeholder="{{localize 'Eye Colour'}}" />
          <span class="label-details">{{localize "Eye Colour"}}</span>
        </div>

        <div id="field-distinguishingmark" class="item">
          <input class="input-details" style="box-shadow: none !important;" name="system.details.distinguishingmark.value" type="text"
            value="{{system.details.distinguishingmark.value}}" placeholder="{{localize 'Distinguishing Mark'}}" />
          <span class="label-details">{{localize "Distinguishing Mark"}}</span>
        </div>

        <div id="field-starsign" class="item">
          <input class="input-details" style="box-shadow: none !important;" name="system.details.starsign.value" type="text"
            value="{{system.details.starsign.value}}" placeholder="{{localize 'Star Sign'}}" />
          <span class="label-details">{{localize "Star Sign"}}</span>
        </div>
      </div>


  </section>
  <!-- TABS -->
  <section id="tab-sections">
    <nav id="wfrp4e-primarytabs" class="sheet-tabs tabs"  ondragstart="return false;" ondrop="return false;">
      <a class="item active" data-tab="main">{{localize "Main"}}</a>
      <a class="item" data-tab="skills">{{localize "Skills"}}</a>
      <a class="item" data-tab="talents">{{localize "Talents"}}</a>
      <a class="item" data-tab="combat">{{localize "Combat"}}</a>
      <a class="item" data-tab="effects">{{localize "Effects"}}</a>
      {{#if actor.hasSpells}}
      <a class="item" data-tab="magic">{{localize "Magic"}}</a>
      {{/if}}
      {{#if actor.hasPrayers}}
      <a class="item" data-tab="religion">{{localize "Religion"}}</a>
      {{/if}}
      <a class="item" data-tab="inventory">{{localize "Trappings"}}</a>
      <a class="item" data-tab="notes">{{localize "Notes"}}</a>
    </nav>

      <section class="content">
        <div class="tab main save-scroll" data-tab="main" >
          {{> systems/wfrp4e/templates/actors/character/character-main.hbs}}
        </div>
        <div class="tab skills save-scroll" data-tab="skills" >
          {{> systems/wfrp4e/templates/actors/actor-skills.hbs}}
        </div>
        <div class="tab talents save-scroll" data-tab="talents" >
          {{> systems/wfrp4e/templates/actors/actor-talents.hbs}}
        </div>
        <div class="tab combat save-scroll" data-tab="combat" >
          {{> systems/wfrp4e/templates/actors/actor-combat.hbs}}
        </div>
        <div class="tab effects save-scroll" data-tab="effects" >
          {{> systems/wfrp4e/templates/actors/actor-effects.hbs}}
        </div>
        <div class="tab magic save-scroll" data-tab="magic" >
          {{> systems/wfrp4e/templates/actors/actor-magic.hbs}}
        </div>
        <div class="tab religion save-scroll" data-tab="religion" >
          {{> systems/wfrp4e/templates/actors/actor-religion.hbs}}
        </div>
        <div class="tab inventory save-scroll" data-tab="inventory" >
          {{> systems/wfrp4e/templates/actors/actor-inventory.hbs}}
        </div>
        <div class="tab notes save-scroll" data-tab="notes" >
          {{> systems/wfrp4e/templates/actors/actor-notes.hbs showAmbitions=true}}
        </div>
    </section>
  </section>
</form>