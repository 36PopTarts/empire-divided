
<div class="religion-header">
  <div class="religion-box-1">
    <span class="blessed-label">{{localize "Blessed By"}}:</span>
    <div class="blessed-input">
      <input name="system.details.god.value" type="text" value="{{system.details.god.value}}"
        data-dtype="system.details.god.type">
    </div>
  </div>
  <div class="religion-box-2">
    <span class="sin-label">{{localize "Sin"}}:</span>
    <div class="sin-input">
      <input name="system.status.sin.value" type="text" value="{{system.status.sin.value}}"
        data-dtype="system.status.sin.type">
    </div>
  </div>
</div>

<div class="inventory-header item blessing-header">
  <div class="name">{{localize "Blessing"}} <a class="sort-items" title="{{localize 'SHEET.SortItems'}}" data-type="prayer"><i class="fas fa-sort-alpha-down"></i></a></div>
  {{#if (isGM)}}
  <div id="blessing-add" class="item-controls">
  {{else}}
  <div id="blessing-add" style="visibility : hidden" class="item-controls">
  {{/if}}
  <a class="item-control item-create" title="{{localize 'SHEET.CreateItem'}}" data-type="prayer" data-prayer-type="blessing"><i class="fas fa-plus"></i></a>
  </div>
</div>

<ol class="inventory-list blessing-list">
  {{#each items.prayers.blessings as |item i|}}
  <li class="item blessing-item" data-id="{{item.id}}" data-item-id="{{item.id}}">
    <div class="content">
      <div class="item-name blessing-name">
        <div class="image" style="background-image: url({{item.img}})"></div>
        <a class="name prayer-roll">{{item.name}}</a>
      </div>

      {{#if ../document.isOwner}}
      <div class="item-controls">
      {{else}}
      <div class="item-controls" style = "visibility : hidden;">
      {{/if}}
        <a class="item-post" title="{{localize 'SHEET.PostItem'}}"><i class="fas fa-comment"></i></a>
        <a class="item-control item-edit" title="{{localize 'SHEET.EditItem'}}"><i class="fas fa-edit"></i></a>
        <a class="item-dropdown" title="{{localize 'SHEET.Dropdown'}}"><i class="fas fa-chevron-down"></i></a>
        <a class="item-control item-delete" title="{{localize 'SHEET.DeleteItem'}}"><i class="fas fa-trash"></i></a>
      </div>
    </div>
  </li>
  {{/each}}
</ol>

