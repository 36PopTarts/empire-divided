<form autocomplete="off" onsubmit="event.preventDefault();">

    <div class="item-properties">
        <div class="property-column">
            <h2 class="property-header">{{localize "Qualities"}}</h2>
            {{#each qualities as |quality q|}}
            <div class="form-group">
                {{#if (eq ../object.type "weapon")}}
                <input type="number" class="property-input group {{quality.key}}" name="{{quality.key}}-group" value="{{quality.existing.group}}" title="{{localize 'PROPERTY.GroupDescription'}}">
                {{/if}}
                <label>{{quality.name}}</label>
                {{#if quality.hasValue}}
                <input type="text" class="property-input {{quality.key}}" name="{{quality.key}}-value" value="{{quality.existing.value}}">
                {{/if}}
                <input type="checkbox" name="{{quality.key}}" data-dtype="Boolean" {{checked existing}}>
            </div>
            {{/each}}
            <div class="form-group">
                <label>{{localize "PROPERTY.Custom"}} <i class="far fa-question-circle" style="margin-left:3px;" data-tooltip="{{localize  'PROPERTY.CustomHint' type='Quality'}}"></i></label>
                <input type="text" class="property-input" name="custom-quality" value="{{customQualities}}">
            </div>
        </div>
        <div class="property-column">
            <h2 class="property-header">{{localize "Flaws"}}</h2>
            {{#each flaws as |flaw f|}}
            <div class="form-group">
                <!-- <input type="number" class="property-input group {{flaw.key}}" name="{{flaw.key}}-group" value="{{flaw.existing.group}}" > -->
                <label>{{flaw.name}}</label>
                {{#if flaw.hasValue}}
                <input type="text" class="property-input {{flaw.key}}" name="{{flaw.key}}-value" value="{{flaw.existing.value}}">
                {{/if}}
                <input type="checkbox" name="{{flaw.key}}" data-dtype="Boolean" {{checked existing}}>
            </div>
            {{/each}}
            <div class="form-group">
                <label>{{localize "PROPERTY.Custom"}} <i class="far fa-question-circle" style="margin-left:3px;" data-tooltip="{{localize  'PROPERTY.CustomHint' type='Flaw'}}"></i></label>
                <input type="text" class="property-input" name="custom-flaw" value="{{customFlaws}}">
            </div>
        </div>

    </div>


    <button type="submit" name="submit">{{localize "Submit"}}</button>
</form>