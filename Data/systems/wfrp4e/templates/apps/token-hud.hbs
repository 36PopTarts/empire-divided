<form id="{{id}}" class="{{classes}}" data-appid="{{appId}}" autocomplete="off" onsubmit="event.preventDefault();">

    <div class="col left">
        <div class="attribute elevation">
            <i class="fas fa-angle-up"></i>
            <input type="text" name="elevation" value="{{elevation}}">
        </div>

        {{#if canConfigure}}
        <div class="control-icon config">
            <i class="fas fa-cog"></i>
        </div>
        {{/if}}

        <div class="control-icon target {{targetClass}}">
            <i class="fas fa-bullseye"></i>
        </div>
    </div>

    <div class="col middle">
        <div class="attribute bar2">
            {{#if displayBar2}}
            <input type="text" name="bar2.value" data-bar="bar2" value="{{bar2Data.value}}">
            {{/if}}
        </div>

        <div class="attribute bar1">
            {{#if displayBar1}}
            <input type="text" name="bar1.value" data-bar="bar1" value="{{bar1Data.value}}">
            {{/if}}
        </div>
    </div>

    <div class="col right">
        {{#if (isGM)}}
        <div class="control-icon visibility {{visibilityClass}}">
            <img src="{{icons.visibility}}" width="36" height="36" title="Toggle Visibility"/>
        </div>
        {{/if}}

        <div class="control-icon effects {{effectsClass}}">
            <img src="{{icons.effects}}" width="36" height="36" title="Assign Status Effects"/>
            <div class="condition-effects">
                {{#each statusEffects as |status src|}}
                <img class="effect-control {{status.cssClass}}" src="{{src}}"
                     {{#if status.title}}title="{{status.title}}"{{/if}} data-status-id="{{status.id}}"/>
                {{/each}}
            </div>
        </div>

        {{#if canToggleCombat}}
        <div class="control-icon combat {{combatClass}}">
            <img src="{{icons.combat}}" width="36" height="36" title="Toggle Combat State"/>
        </div>
        {{/if}}
    </div>
</form>
