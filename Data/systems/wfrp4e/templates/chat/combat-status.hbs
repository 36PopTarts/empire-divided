<div class="wfrp4e chat-card">
    <b>{{name}} {{localize "CondStatus"}} {{round}}</b><br>
    {{#if conditions}}
    {{#each conditions as |condition c|}}
    <a class='condition-chat'><i class='fas fa-user-injured'></i> {{condition}}</a><br>
    {{/each}}
    <br>
    {{/if}}
    {{#if modifiers}}
    <b>{{localize "Modifiers"}}: </b>
    <span>{{modifiers}}</span>
    {{/if}}
</div>
