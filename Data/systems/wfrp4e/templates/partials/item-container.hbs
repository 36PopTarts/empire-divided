<div class="inventory-header item inventory-container level-{{level}}" inventory-type="container" root="{{pack.id}}"
  data-id="{{pack.id}}">
  <div class="item-name" data-id="{{pack.id}}">
    <div class="image item-image" style="background-image: url({{pack.img}})"></div>
    <div class="name item-label">{{pack.name}}</div>
  </div>
  {{#if pack.countEnc.value}}
    {{#if pack.wearable.value}}
      {{#if pack.worn.value}}
        <a class="worn-container">{{localize "Worn"}}: <i class="far fa-check-circle"></i></a>
      {{else}}
        <a class="worn-container">{{localize "Worn"}}: <i class="far fa-circle"></i></a>
      {{/if}}
    {{/if}}
    <div class="column-section">
      <span class="item-carries">{{localize 'Carries'}}: {{pack.carries.current}}/{{pack.carries.value}}</span>
      <a class="toggle-enc" title="{{localize 'SHEET.CountEncOn'}}">{{localize "SHEET.EncAbbrev"}}:
        {{pack.encumbrance.total}}</a>
    </div>
  {{else}}
    <div class="column-section">
      <span class="item-carries">{{localize 'Carries'}}: {{pack.carries.current}}/{{pack.carries.value}}</span>
      <a class="toggle-enc" title="{{localize 'SHEET.CountEncOff'}}">{{localize "SHEET.EncAbbrev"}}: - </a>
    </div>
    {{#if pack.wearable.value}}
      {{#if pack.worn.value}}
        <a style="visibility: hidden" class="worn-container">{{localize "Worn"}}: <i
            class="far fa-check-circle"></i></a>
      {{else}}
        <a style="visibility: hidden" class="worn-container">{{localize "Worn"}}: <i class="far fa-circle"></i></a>
      {{/if}}
    {{/if}}
  {{/if}}

  <span class="item-quantity">{{localize "SHEET.QtyAbbrev"}}.</span>
  <span class="item-weight">{{localize "SHEET.EncAbbrev"}}.</span>

  {{#if owner}}
    <div class="item-controls">
  {{else}}
    <div class="item-controls" style="visibility : hidden;">
  {{/if}}
  <a class="item-control item-edit" title="{{localize 'SHEET.EditItem'}}"><i class="fas fa-edit"></i></a>
  {{#if root}}
    <a class="item-control item-delete" title="{{localize 'SHEET.DeleteItem'}}"><i class="fas fa-trash"></i></a>
  {{else}}
    <a class="item-control item-remove" title="{{localize 'SHEET.RemoveItem'}}"><i
        class="fa-solid fa-arrow-up-from-bracket"></i></a>
  {{/if}}
  {{#if pack.collapsed}}
    <a class="section-collapse"  title="{{localize 'SHEET.Expand'}}" data-section="{{pack.id}}"><i class="fa-solid fa-chevron-down"></i></a>
  {{else}}
    <a class="section-collapse"  title="{{localize 'SHEET.Collapse'}}"  data-section="{{pack.id}}"><i class="fa-solid fa-chevron-up"></i></a>
  {{/if}}
</div>
</div>
<ol class="inventory-list level-{{level}}">
  {{#if pack.collapsed}}
    <div class="collapsed-icons item-list">
      {{#each pack.system.carrying as |item i|}}
        <div class="item" data-id="{{item.id}}" data-item-id="{{item.id}}">
          <a class="item-edit" data-tooltip="{{item.name}}"><img src="{{item.img}}"></a>
        </div>
      {{/each}}
    </div>
  {{else}}
    {{#each pack.system.carrying as |item i|}}
      <li class="item level-{{../level}}-item" data-id="{{item.id}}" data-item-id="{{item.id}}">
        <div class="content">
          <div class="item-name item-dropdown">
            <div class="image item-image" style="background-image: url({{item.img}})"></div>
            <a class="name">{{item.name}}</a>
          </div>

          <div class="item-type">{{item.trappingCategory}}</div>

          <a class="quantity quantity-click">{{item.quantity.value}}</a>
          <span class="weight">{{item.encumbrance.total}}</span>
          {{#if ../owner}}
            <div class="item-controls">
          {{else}}
            <div class="item-controls" style="visibility : hidden;">
          {{/if}}
          <a class="item-control item-edit" title="{{localize 'SHEET.EditItem'}}"><i class="fas fa-edit"></i></a>
          <a class="item-control item-remove" title="{{localize 'SHEET.RemoveItem'}}"><i
              class="fa-solid fa-arrow-up-from-bracket"></i></a>
        </div>
        </div>
      </li>
    {{/each}}
  {{/if}}
</ol>